<resources>
    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorControlNormal</item>
    </style>

    <style name="Style.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/toolbarBackgroundColor</item>
        <item name="titleTextColor">?attr/colorControlNormal</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">?attr/colorSecondary</item>
        <item name="colorControlHighlight">?attr/colorSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="EmptyPageHintTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DataPointInputNumberStyle">
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
        <item name="android:singleLine">true</item>
        <item name="android:digits">0123456789.,-</item>
        <item name="android:hint">0</item>
    </style>

    <style name="DiscreteValueButtonsScrollViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ExpansiveTextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/expansive_text_box_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:inputType">textMultiLine|textAutoCorrect|textCapSentences</item>
    </style>

</resources>
