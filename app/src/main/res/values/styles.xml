<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:textColor">@color/toolBarTextColor</item>
        <item name="colorPrimary">@color/toolbarColor</item>
        <item name="colorPrimaryDark">@color/toolbarColorDark</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/toolBarTextColor</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/toolBarTextColor</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/secondaryColor</item>
        <item name="backgroundTint">@color/secondaryColor</item>
    </style>

    <style name="EmptyPageHintTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textAlignment">center</item>item>
    </style>
</resources>
