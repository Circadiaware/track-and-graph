<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" >
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding"
                    >

                <TextView
                        android:id="@+id/nameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dialog_input_spacing"
                        android:text="@string/new_name"
                        android:textSize="@dimen/dialog_label_text_size"
                        />
                <EditText
                        android:id="@+id/graphStatNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dialog_input_spacing"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dialog_input_spacing"
                            android:text="@string/graph_type_label"
                            android:textSize="@dimen/dialog_label_text_size"
                            />
                    <Spinner
                            android:id="@+id/graphTypeSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dialog_input_spacing"
                            android:layout_marginLeft="@dimen/dialog_input_spacing"
                            android:entries="@array/graph_types"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/movingAverageLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dialog_input_spacing"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/movingAverageLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dialog_input_spacing"
                            android:text="@string/moving_average_period"
                            android:textSize="@dimen/dialog_label_text_size"
                            />
                    <Spinner
                            android:id="@+id/movingAverageSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dialog_input_spacing"
                            android:layout_marginLeft="@dimen/dialog_input_spacing"
                            android:entries="@array/moving_average_time_periods"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/timePeriodLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dialog_input_spacing"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/timePeriodLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dialog_input_spacing"
                            android:text="@string/maximum_sample_period"
                            android:textSize="@dimen/dialog_label_text_size"
                            />
                    <Spinner
                            android:id="@+id/samplePeriodSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dialog_input_spacing"
                            android:layout_marginLeft="@dimen/dialog_input_spacing"
                            android:entries="@array/graph_time_periods"
                        />
                </LinearLayout>

                <ImageView
                        android:id="@+id/divider0"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/input_spacing_large"
                        android:background="@color/divider"/>

                <LinearLayout
                        android:id="@+id/pieChartSelectFeatureLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/input_spacing_large"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/singleFeatureSelectLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_a_feature"
                            android:textSize="@dimen/dialog_label_text_size"
                            />
                    <Spinner
                            android:id="@+id/pieChartFeatureSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dialog_input_spacing"
                            android:spinnerMode="dialog"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/lineGraphFeaturesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dialog_input_spacing"
                        android:orientation="vertical"
                        />
                <ImageButton
                        android:id="@+id/addFeatureButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:layout_marginTop="@dimen/dialog_input_spacing"
                        android:src="@drawable/add_icon"/>

            </LinearLayout>
        </ScrollView>
        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
    </FrameLayout>
</layout>