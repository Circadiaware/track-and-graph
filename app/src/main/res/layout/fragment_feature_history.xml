<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/featureDescriptionCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_spacing_large"
            android:layout_marginBottom="@dimen/input_spacing_large"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_padding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_colon"
                    android:textColor="@color/disabledTextColor"
                    android:textSize="@dimen/dialog_label_text_size" />

                <TextView
                    android:id="@+id/featureDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_input_spacing"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/dialog_label_text_size"
                    tools:text="Feature description" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dataPointList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="10dp"
            android:requiresFadingEdge="vertical"
            tools:listitem="@layout/list_item_data_point" />

        <TextView
            android:id="@+id/noDataPointsHintText"
            style="@style/EmptyPageHintTextStyle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/input_spacing_large"
            android:text="@string/no_data_points_history_fragment_hint" />

    </LinearLayout>
</layout>
