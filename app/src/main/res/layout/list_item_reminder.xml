<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:clipToPadding="false"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/reminderNameText"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/card_padding"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/timeText"
                    app:layout_constraintBottom_toBottomOf="@id/timeText"
                    app:layout_constraintRight_toLeftOf="@id/timeText"
                    />

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/dialog_input_spacing"
                    android:paddingRight="@dimen/dialog_input_spacing"
                    android:layout_marginTop="@dimen/card_padding"
                    android:text="00:00"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/deleteButton"
                    tools:text="17:35"
                    />

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="@dimen/card_padding"
                    android:paddingRight="@dimen/card_padding"
                    android:src="@drawable/delete_icon"
                    android:scaleType="fitCenter"
                    android:background="@color/ap_transparent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:id="@+id/nameCheckboxDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dialog_input_spacing"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/reminderNameText"
                    app:layout_constraintBottom_toTopOf="@id/monBox"
                    />

                <CheckBox
                    android:id="@+id/monBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_padding"
                    app:layout_constraintTop_toBottomOf="@id/nameCheckboxDivider"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tueBox"
                    app:layout_constraintBottom_toBottomOf="@id/checkboxLabelDivider"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    />

                <CheckBox
                    android:id="@+id/tueBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nameCheckboxDivider"
                    app:layout_constraintLeft_toRightOf="@id/monBox"
                    app:layout_constraintRight_toLeftOf="@id/wedBox"
                    app:layout_constraintBottom_toBottomOf="@id/checkboxLabelDivider"
                    />

                <CheckBox
                    android:id="@+id/wedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nameCheckboxDivider"
                    app:layout_constraintLeft_toRightOf="@id/tueBox"
                    app:layout_constraintRight_toLeftOf="@id/thuBox"
                    app:layout_constraintBottom_toBottomOf="@id/checkboxLabelDivider"
                    />

                <CheckBox
                    android:id="@+id/thuBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nameCheckboxDivider"
                    app:layout_constraintLeft_toRightOf="@id/wedBox"
                    app:layout_constraintRight_toLeftOf="@id/friBox"
                    app:layout_constraintBottom_toBottomOf="@id/checkboxLabelDivider"
                    />

                <CheckBox
                    android:id="@+id/friBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nameCheckboxDivider"
                    app:layout_constraintLeft_toRightOf="@id/thuBox"
                    app:layout_constraintRight_toLeftOf="@id/satBox"
                    app:layout_constraintBottom_toBottomOf="@id/checkboxLabelDivider"
                    />

                <CheckBox
                    android:id="@+id/satBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nameCheckboxDivider"
                    app:layout_constraintLeft_toRightOf="@id/friBox"
                    app:layout_constraintRight_toLeftOf="@id/sunBox"
                    app:layout_constraintBottom_toBottomOf="@id/checkboxLabelDivider"
                    />

                <CheckBox
                    android:id="@+id/sunBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/card_padding"
                    app:layout_constraintTop_toBottomOf="@id/nameCheckboxDivider"
                    app:layout_constraintLeft_toRightOf="@id/satBox"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/checkboxLabelDivider"
                    />

                <View
                    android:id="@+id/checkboxLabelDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/monBox"
                    app:layout_constraintBottom_toTopOf="@id/monLabel"
                    />

                <TextView
                    android:id="@+id/monLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mon"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/checkboxLabelDivider"
                    app:layout_constraintLeft_toLeftOf="@id/monBox"
                    app:layout_constraintRight_toRightOf="@id/monBox"
                    app:layout_constraintBottom_toTopOf="@+id/labelBottomDivider"
                    />

                <TextView
                    android:id="@+id/tueLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tue"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/checkboxLabelDivider"
                    app:layout_constraintLeft_toLeftOf="@id/tueBox"
                    app:layout_constraintRight_toRightOf="@id/tueBox"
                    app:layout_constraintBottom_toTopOf="@+id/labelBottomDivider"
                    />

                <TextView
                    android:id="@+id/wedLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/wed"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/checkboxLabelDivider"
                    app:layout_constraintLeft_toLeftOf="@id/wedBox"
                    app:layout_constraintRight_toRightOf="@id/wedBox"
                    app:layout_constraintBottom_toTopOf="@+id/labelBottomDivider"
                    />

                <TextView
                    android:id="@+id/thuLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/thu"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/checkboxLabelDivider"
                    app:layout_constraintLeft_toLeftOf="@id/thuBox"
                    app:layout_constraintRight_toRightOf="@id/thuBox"
                    app:layout_constraintBottom_toTopOf="@+id/labelBottomDivider"
                    />

                <TextView
                    android:id="@+id/friLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fri"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/checkboxLabelDivider"
                    app:layout_constraintLeft_toLeftOf="@id/friBox"
                    app:layout_constraintRight_toRightOf="@id/friBox"
                    app:layout_constraintBottom_toTopOf="@+id/labelBottomDivider"
                    />

                <TextView
                    android:id="@+id/satLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sat"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/checkboxLabelDivider"
                    app:layout_constraintLeft_toLeftOf="@id/satBox"
                    app:layout_constraintRight_toRightOf="@id/satBox"
                    app:layout_constraintBottom_toTopOf="@+id/labelBottomDivider"
                    />

                <TextView
                    android:id="@+id/sunLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sun"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/checkboxLabelDivider"
                    app:layout_constraintLeft_toLeftOf="@id/sunBox"
                    app:layout_constraintRight_toRightOf="@id/sunBox"
                    app:layout_constraintBottom_toTopOf="@+id/labelBottomDivider"
                    />

                <View
                    android:id="@+id/labelBottomDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/card_padding"
                    app:layout_constraintTop_toBottomOf="@id/monLabel"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>