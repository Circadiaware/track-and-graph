<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:alpha="0.1" />
        <Button
                android:id="@+id/delete_button"
                android:text="@string/delete_this_track_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                style="@style/Widget.AppCompat.Button"
                app:layout_constraintEnd_toEndOf="@+id/background" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/background"
                app:layout_constraintBottom_toBottomOf="@+id/background" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/background" android:paddingStart="64dp"
                android:paddingEnd="64dp" android:paddingTop="8dp" android:paddingBottom="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
