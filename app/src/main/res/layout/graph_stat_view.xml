<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
            android:id="@+id/demoCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cart_margin_small"
            android:layout_marginRight="@dimen/cart_margin_small"
            android:layout_marginBottom="@dimen/cart_margin_small"
            android:layout_marginTop="@dimen/dialog_input_spacing"
            android:minHeight="@dimen/graph_height"
            app:cardCornerRadius="@dimen/card_corner_radius"
            >
        <LinearLayout
                android:id="@+id/graphAndLegendLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/headerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_padding"
                    android:gravity="center"
                    android:textSize="@dimen/dialog_header_size"
                    tools:text="The name of the graph"/>
            <com.androidplot.xy.XYPlot
                    style="@style/APDefacto.Light"
                    android:id="@+id/lineGraph"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/graph_height"
                    android:layout_margin="@dimen/card_padding"
                    app:lineLabelRotationBottom="-25"
                    app:graphBackgroundColor="@color/ap_white"
                    app:backgroundColor="@color/ap_white"
                    app:domainLineColor="@color/colorGridLines"
                    app:rangeLineColor="@color/colorGridLines"
                    app:domainLineThickness="0.1dp"
                    app:rangeLineThickness="0.1dp"
                    app:lineLabelTextSizeBottom="10sp"
                    app:lineLabelTextSizeLeft="10sp"
                    />
            <com.androidplot.pie.PieChart
                    style="@style/APDefacto.Light"
                    android:id="@+id/pieChart"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/graph_height"
                    android:layout_margin="@dimen/card_padding"
                    app:graphBackgroundColor="@color/ap_white"
                    app:backgroundColor="@color/ap_white"
                    />
            <TextView
                    android:id="@+id/errorMessage"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/graph_height"
                    android:layout_marginLeft="@dimen/card_padding"
                    android:layout_marginRight="@dimen/card_padding"
                    android:gravity="center"
                    tools:text="Some error message"
                    />
            <TextView
                    android:id="@+id/statMessage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/graph_height"
                    android:layout_marginLeft="@dimen/card_padding"
                    android:layout_marginRight="@dimen/card_padding"
                    android:gravity="center"
                    android:textSize="70sp"
                    tools:text="628.7 Days"
                    />
            <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/legendFlexboxLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_padding"
                    android:layout_marginRight="@dimen/card_padding"
                    android:layout_marginLeft="@dimen/card_padding"
                    app:flexWrap="wrap"
                    app:alignContent="center"
                    app:justifyContent="center"
                    />
        </LinearLayout>
        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
        <ImageButton
                android:id="@+id/menuButton"
                android:src="@drawable/list_menu_icon"
                android:background="#00FFFFFF"
                android:paddingLeft="12dp"
                android:paddingBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"/>
    </androidx.cardview.widget.CardView>
</layout>