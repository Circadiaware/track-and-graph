<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ap_white"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ap_white"
            android:paddingBottom="40dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_2"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_text_2_1"
                android:textSize="15sp"
                android:padding="20dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:src="@drawable/faq_image_2_1"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                >
                <ImageView
                    android:id="@+id/importIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/import_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/exportDesc"
                    app:layout_constraintBottom_toBottomOf="@id/exportDesc"
                    />
                <TextView
                    android:id="@+id/exportDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/faq_text_2_2"
                    android:textSize="15sp"
                    android:padding="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/importIcon"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <ImageView
                    android:id="@+id/exportIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/export_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/importDesc"
                    app:layout_constraintBottom_toBottomOf="@id/importDesc"
                    />
                <TextView
                    android:id="@+id/importDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/faq_text_2_3"
                    android:textSize="15sp"
                    android:padding="20dp"
                    app:layout_constraintLeft_toRightOf="@+id/exportIcon"
                    app:layout_constraintTop_toBottomOf="@id/exportDesc"
                    app:layout_constraintRight_toRightOf="parent"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</layout>
