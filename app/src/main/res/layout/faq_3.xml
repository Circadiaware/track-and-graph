<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ap_white"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ap_white"
            android:paddingBottom="40dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_3"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_text_3_1"
                android:textSize="15sp"
                android:padding="20dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/faq_image_3_1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_text_3_2"
                android:textSize="15sp"
                android:padding="20dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/faq_image_3_2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_text_3_3"
                android:textSize="15sp"
                android:padding="20dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/faq_image_3_3"
                />
        </LinearLayout>
    </ScrollView>
</layout>
