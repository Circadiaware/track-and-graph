<resources>

    <style name="AppThemeBase" parent="Theme.Material3.DayNight">
        <item name="android:actionOverflowButtonStyle">@style/Style.OverflowButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/Style.OverflowMenuStyle</item>
        <item name="editTextStyle">@style/Style.EditTextStyle</item>
        <item name="cardViewStyle">@style/Style.CardViewStyle</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="buttonStyle">@style/Style.ButtonStyle</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <!--COLORS-->
        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorPrimaryContainer">@color/orange</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSecondary">@color/chalky_white</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/dark_orange</item>
        <item name="errorTextColor">@color/dark_orange</item>
        <item name="colorOnError">@color/faded_green</item>
        <item name="colorError">@color/dark_orange</item>
        <item name="colorControlNormal">@color/blue_black</item>
        <item name="colorControlHighlight">@color/light_gray</item>
        <item name="toolbarBackgroundColor">@color/blue_white_pastel</item>
        <item name="android:textColorPrimary">@color/blue_black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/blue_black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:textColorHint">@color/mid_gray</item>
        <item name="android:windowBackground">@color/chalky_white</item>

    </style>

    <style name="TransparentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">?attr/colorSurface</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@color/blue_black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/blue_black</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="NeutralButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange</item>
    </style>
</resources>
